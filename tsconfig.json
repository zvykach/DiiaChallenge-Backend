{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./src",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [],
  "hooks": [
    "copy-files"
  ]
}
